<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:background="#DDD"
    android:paddingTop="5dp"
    android:paddingRight="3dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_last_exercise"
        style="@style/exercisescope_DisplayItem_Text"
        android:background="@drawable/rectangle_ly"
        android:text="上次练习"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_simple_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_simple_title" />


    <TextView
        android:id="@+id/tv_item_simple_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/tv_last_exercise"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>