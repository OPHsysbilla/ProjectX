<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:background="@drawable/rectangle_ly"
    android:paddingTop="10dp"
    android:paddingRight="3dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_item_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:text="多福多寿多福多福多寿多福多福多寿多福多福多寿多福"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chapter_modifier"
        style="@style/exercisescope_DisplayItem_Text"
        android:background="@drawable/rectangle_ly"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_simple_title"
        app:layout_constraintLeft_toRightOf="@id/tv_item_simple_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_simple_title"
        tools:text="单元复习" />

    <TextView
        android:id="@+id/tv_last_exercise"
        style="@style/exercisescope_DisplayItem_Text"
        android:background="@drawable/rectangle_ly"
        android:text="上次练习"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_simple_title"
        app:layout_constraintLeft_toRightOf="@id/tv_chapter_modifier"
        app:layout_constraintTop_toTopOf="@+id/tv_item_simple_title" />


    <TextView
        android:id="@+id/tv_item_simple_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_simple_title" />

    <ImageView
        android:id="@+id/btn_select"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>